<h1><%= @city.name %></h1>

<center><u><%=link_to "Write a New Travel Review", new_country_city_review_path(country_id: params[:country_id], city_id: params[:id])%></u></center>

<%= paginate @reviews %>

<% if @reviews %>

  <% @reviews.each do |review| %>

    <div class="review" style="min-height: 180px">
      <div style="display: inline-block; float: left; margin: 10px 20px">
      <table style="border-radius: 10px">
      <tr>
        <td>Food</td><td><%= "#{review.food_rating}" %></td>
      </tr>
      <tr>
        <td>Nightlife</td><td><%= "#{review.nightlife_rating}" %></td>
      </tr>
      <tr>
        <td>Landmarks</td><td><%= "#{review.landmark_rating}" %></td>
      </tr>
      <tr>
        <td>Cost</td><td><%= "#{review.cost_rating}" %></td>
      </tr>
      <tr>
        <td>Weather</td><td><%= "#{review.weather_rating}" %></td>
      </tr>
      <tr>
        <td>Culture</td><td><%= "#{review.culture_rating}" %></td>
      </tr>
      <tr>
        <td><b>Overall</b></td><td></td>
      </tr>
    </table>
      </div>
      <div style="display: inline-block; float:left; margin: 20px 20px; width:400px; height: 215px; text-align: center; border: 1px solid grey; border-radius: 20px">
        <br /><u>Comments:</u><hr />
      <p><%= "#{review.description}" %></p>
      </div>
      <center>
      <div style="display: block; clear: both">
      <%= "Posted by: " + "#{review.user_id}" %>
    </div>
    <div>
        <%= link_to "Edit Review", edit_country_city_review_path(country_id: params[:country_id], city_id: params[:id], id: review.id), :method => :get %>
         |
        <%= link_to "Delete Review", country_city_review_path(country_id: params[:country_id], city_id: params[:id], id: review.id), :method => :delete %>
    </div>
  </center>
  </div>

  <% end %>

<% end %>
<br />
<center><%=link_to "Back", country_path(id: params[:country_id])%></center>
