<h1><%= "Add your review" %></h1>

<% if flash.any? %>
  <div class="flash">
    <div class="container">
      <%flash[:notice].each do |f|%>
      <li>
        <%=f%>
      <%end%>
      </li>
    </div>
  </div>
<% end %>

<br>
  <%= form_for [@country, @city, @review] do |f| %>
    <div>
      <%= f. label :food_rating%>
      <br>
        <%= f. select :food_rating, [['1 star',1],['2 star',2],['3 star',3],['4 star',4],['5 star',5]]%>
    </div>
    <div>
      <%= f. label :nightlife_rating%>
      <br>
        <%= f. select :nightlife_rating, [['1 star',1],['2 star',2],['3 star',3],['4 star',4],['5 star',5]]%>
    </div>
    <div>
      <%= f. label :landmark_rating%>
      <br>
        <%= f. select :landmark_rating, [['1 star',1],['2 star',2],['3 star',3],['4 star',4],['5 star',5]]%>
    </div>
    <div>
      <%= f. label :cost_rating %>
      <br>
        <%= f. select :cost_rating, [['1 star',1],['2 star',2],['3 star',3],['4 star',4],['5 star',5]]%>
    </div>
    <div>
      <%= f. label :weather_rating %>
      <br>
        <%= f. select :weather_rating, [['1 star',1],['2 star',2],['3 star',3],['4 star',4],['5 star',5]]%>
    </div>
    <div>
      <%= f. label :culture_rating %>
      <br>
        <%= f. select :culture_rating, [['1 star',1],['2 star',2],['3 star',3],['4 star',4],['5 star',5]]%>
    </div>
    <div>
      <%= f. label :description %>
      <br>
        <%= f. text_area :description, size: "40x10" %>
    </div>
    <div>
      <%= f.submit  "Submit"%>
    <div>
  <%end%>
</br>
